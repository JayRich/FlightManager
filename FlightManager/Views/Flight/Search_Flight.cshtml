@model ADO.Flight


@{

}


<h1 class="text-center display-4">Search Flights by Info.</h1>

<div class="row mx-auto">
    <div class="col-md-4">
        <form asp-controller="Flight" asp-action="Display_Flight">

            <div class="form-group">
                <!--
                <label for="fn" class="control-label"></label>
                Flight Number: <input type="text" name="fn" />
                    -->
                <label for="fn" class="control-label">Flight Number</label>
                <input type="text" name="fn" class="form-control" />
            </div>
            <div class="form-group">
                <label for="dd" class="control-label">Departure Date</label>
                <input type="text" name="dd" class="form-control" />
               
            </div>
            <div class="form-group">
                <label for="ad" class="control-label">Arrival Date</label>
                <input type="text" name="ad" class="form-control" />
              
            </div>
            <div class="form-group">
                <label for="dt" class="control-label">Departure Time</label>
                <input type="text" name="dt" class="form-control" />
             
            </div>
            <div class="form-group">
                <label for="at" class="control-label">Arrival Time</label>
                <input type="text" name="at" class="form-control" />

            </div>
            <div class="form-group">
                <label for="da" class="control-label">Departure Airport</label>
                <input type="text" name="da" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="aa" class="control-label">Arrival Airport</label>
                <input type="text" name="aa" class="form-control" />
               
            </div>
            <div class="form-group">
                <label for="pl" class="control-label">Passenger Limit</label>
                <input type="text" name="pl" class="form-control" />
               
            </div>
            <div class="form-group">
                <label for="cp" class="control-label">Current Passengers</label>
                <input type="text" name="cp" class="form-control" />
                
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info">Submit</button>
            </div>
            </form>

        </div>
    </div>
